{
  "compilerOptions": {
    "lib": ["dom"],
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "target": "esnext",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"]
}
